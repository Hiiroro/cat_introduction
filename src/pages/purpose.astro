      ];
      let current = 0;
      const imgElement = document.getElementById("slide-img");
      const restartText = document.getElementById("restart-text");
      const prevBtn = document.getElementById("prev-btn");
      const nextBtn = document.getElementById("next-btn");
      const intervalDuration = 3000;
      let intervalId = startAutoPlay();
      let restartTimeoutId = null;

      function showImage(index) {
        current = (index + images.length) % images.length;
        imgElement.src = images[current];
      }

      function nextImage() {
        if (current < images.length - 1) {
          showImage(current + 1);
        } else {
          stopAutoPlay();
          scheduleRestartPrompt();
        }
      }

      function startAutoPlay() {
        return setInterval(nextImage, intervalDuration);
      }

      function stopAutoPlay() {
        if (intervalId) {
          clearInterval(intervalId);
          intervalId = null;
        }
      }

      function resetAutoPlay() {
        stopAutoPlay();
        hideRestartPrompt();
        intervalId = startAutoPlay();
      }

      function scheduleRestartPrompt() {
        restartTimeoutId = setTimeout(() => {
          restartText.style.display = "block";
          restartText.classList.add("fade-in");
        }, 3000);
      }

      function hideRestartPrompt() {
        if (restartTimeoutId) {
          clearTimeout(restartTimeoutId);
          restartTimeoutId = null;
        }
        restartText.style.display = "none";
        restartText.classList.remove("fade-in");
      }

      restartText.addEventListener("click", () => {
        showImage(0);
        resetAutoPlay();
      });

      prevBtn.addEventListener("click", () => {
        showImage(current - 1);
        resetAutoPlay();
      });

      nextBtn.addEventListener("click", () => {
        if (current === images.length - 1) {
          showImage(0);
        } else {
          showImage(current + 1);
        }
        resetAutoPlay();
      });
    </script>
